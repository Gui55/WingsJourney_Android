<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:elevation="@dimen/first_font_size"
    android:layout_height="@dimen/first_cardview_height"
    android:layout_marginBottom="@dimen/little_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_game_image"
            android:layout_width="@dimen/first_image_box_size"
            android:layout_height="@dimen/first_image_box_size"
            android:layout_gravity="center"
            tools:src="@color/design_default_color_error"/>

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/first_font_size"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/little_margin"
            android:layout_marginStart="@dimen/little_margin"
            android:layout_marginEnd="@dimen/little_margin"
            tools:text="Naruto Shippuden: Ultimate Ninja Storm 2"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>